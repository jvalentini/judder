%h1 Listing news
%table
  - for news in @news
    %tr
      %td
        %h3= html_escape(news.title)
    %tr
      %td= html_escape(news.body)
    %tr
      %td
        = link_to 'Show', news
        = link_to 'Edit', edit_news_path(news)
        = link_to 'Destroy', news, :confirm => 'Are you sure?', :method => :delete

%br/
%br/

= link_to 'New news', new_news_path
